@using Blog.Models;

<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/bootstrap-rtl.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/Blog.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" type="text/css">
    <!-- Scripts -->
    <script src="@Url.Content("~/Scripts/jQuery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Other.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-rtl.js")" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui-1.10.4.js"></script>
    @RenderSection("ExtraHeaders", false)
</head>
<body>
	<header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
			<div class="navbar-header">
				<div class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
					<span class="sr-only">Toggle Navigation</span>
					<span class="fa fa-cog fa-spin fa-2x"></span>
				</div>
			</div>
			<nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
				<ul class="nav navbar-nav">
					<li><a href="@Href("~/")"><span class="fa fa-home fa-lg"></span> خانه</a></li>
					<li><a href="@Href("~/ContactMe/CreateContact")"><span class="fa fa-phone fa-lg"></span> تماس با من</a> </li>
					<li><a href="@Href("~/ContactMe/AboutMe")"><span class="fa fa-user fa-lg"></span> درباره من</a></li>
                        @if (ViewBag.IsAdmin ?? false)
                            {
                            <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-cog fa-lg"></span> عملیات ادمین <b class="caret"></b></a>
                              <ul class="dropdown-menu">
                                  <li>
                                    <a href="@Href("~/Posts/PostList")"><span class="fa fa-edit fa-lg"></span> لیست پست ها </a>
                                  </li>
                                  <li>
                                    <a href="@Href("~/Posts/CreatePost")"><span class="fa fa-pencil fa-lg"></span> پست جدید</a>
                                  </li>
                                  <li>
                                    <a href="@Href("~/ContactMe/ContactIndex")"><span class="fa fa-envelope-o fa-lg"></span> پیام @{Html.RenderAction("ContactCount", "ContactMe");}</a>
                                  </li>
                                  <li>
                                    <a href="@Href("~/NewsLetter/NewsLetterIndex")"><span class="fa fa-envelope fa-lg"></span> ایمیل های خبرنامه @{Html.RenderAction("EmailCount", "NewsLetter");}</a>
                                  </li>
                                  <li>
                                    <a href="@Href("~/Posts/Comments")"><span class="fa fa-comments fa-lg"></span> کامنت ها </a>
                                  </li>
                                  <li>
                                    <a href="@Href("~/Upload/UploadFiles")"><span class="fa fa-plus fa-lg"></span> آپلود فایل</a>
                                  </li>
                                  <li>
                                    <a id="EL" href="@Href("~/explorer")"><span class="fa fa-folders fa-lg"></span> فولدر /Content/</a>
                                  </li>
                              </ul>
                            </li>
                            <li>
                                <a href="@Href("~/Accounts/Logout")"><i class="fa fa-lock fa-lg"></i> خروج</a>
                            </li>
                            }
                            else
                            {
                            <li>
                               <a href="@Href("~/Accounts/Login")"><i class="fa fa-unlock fa-lg"></i> ورود</a>
                            </li>
                            @*<li>
                                <!---------- Comment Modal Button ------------->
                                <a href="#" data-toggle="modal" data-target=".ContactModal">تماس</a>    
                            </li>*@
                            }
				</ul>
                <form action="@Href("~/Posts/Search")" class="navbar-form navbar-left" id="searchBox" role="search">
					<div class="form-group">
						<input type="text" name="sq" class="form-control" placeholder="جستجو">
					</div>
					<div id="SearchIcon"><span class="glyphicon glyphicon-search"></span></div>
				</form>
			</nav>
	</header>
    <div id="headerLogo">
        <img class="titleImage-1" src="/Content/Images/tv.gif" />
        <a href="@Href("~/")">
            <img class="titleImage-2" src="@Href("~/Content/Images/Titleper-1.png")" />
            @*<img class="titleImage-1" src="@Href("~/Content/Images/College-List-2.png")" />*@
        </a>
    </div>
    <div id="content">
        <div id="topSeparator"></div>
        @RenderSection("Sec1", false)
        <div id="main">
            @RenderSection("Sec2", false)
            @RenderBody()
        </div>
        @RenderSection("Sec3", false)    
    </div>
    <div id="footer">
        <div class="container">
            <h4>تک لیست با انواع دستگاه های کامپیوتری سازگار است:</h4>
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <a href="#"><i class="fa fa-apple fa-4x"></i></a>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <a href="#"><i class="fa fa-android fa-4x"></i></a>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4">
                    <a href="#"><i class="fa fa-windows fa-4x"></i></a>
                </div>
            </div>
            <div class="row">
                <a href="#"><div class="col-md-4 col-sm-4 col-xs-4">آیپد و آیفون</div></a>
                <a href="#"><div class="col-md-4 col-sm-4 col-xs-4">اندروید</div></a>
                <a href="#"><div class="col-md-4 col-sm-4 col-xs-4">دستگاه های ویندوز</div></a>
            </div>
            <br />
            <br />
            <div class="copyright">&copy; 2014 Babak Hosseini Nezhad. All rights reserved</div>
        </div>
    </div>
    <div class="btn btn-primary btn-lg scrollToTop"><span class="glyphicon glyphicon-arrow-up"></span></div>
    <div class="btn btn-primary btn-lg scrollToBottom"><span class="glyphicon glyphicon-arrow-down"></span></div>
    <div class="menu">
        <!-- ------------ -->
        @Html.Partial("_SideBar")
    </div>

    <!---------- News Letter Modal -------->
    <div class="modal fade newsLetter" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">برای اطلاع از آخرین مقالات در خبر نامه ما عضو شوید:</h4>
          </div>
          <div class="modal-body" style="text-align:right;">
            <form method="post" action="@Href("~/NewsLetter/EnterEmail")">
                <span>پست الکترونیکی خود را وارد کنید:</span><br /><br />
                <input type="email" class="CustomInput-5" name="e" />
                <div class="modal-footer">
                    <input type="submit" class="btn btn-default" style="color:#D25A3F; font-weight:bold; border:1px solid #D25A3F; width:200px;" value="ارسال" />
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="fa fa-bars fa-3x menuButton mbp-1"></div>
</body>
</html>
