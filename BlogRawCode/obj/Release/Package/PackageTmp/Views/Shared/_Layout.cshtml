<!DOCTYPE html>
<html dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Blog.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jQuery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Other.js")" type="text/javascript"></script>
    @RenderSection("ExtraHeaders", false)
    
</head>

<body>
    <div class="Lastseparator"></div>
    <div id="header">
        <a href="@Href("~/")"><img class="titleImage-1" src="@Href("~/Content/Images/ListChick.png")" /><img class="titleImage-2" src="@Href("~/Content/Images/Titleper.png")" /></a>
        <a id="forkme" href="https://github.com/babakmbm/BabakBlog" target="_blank"></a>
    </div>
    <div id="content">
        <div id="topSeparator"></div>
        
        <div id="main">
            @RenderBody()
        </div>

        @RenderSection("SideBar",false)
        
        <div id="bottomSeparator"></div>
    </div>
    <div id="footer">
        <div id="copyright">Copyright &copy; 2014 Babak Hosseini Nezhad</div>
        @if (ViewBag.IsAdmin ?? false)
        {
            <div class="controlpanel">
                <a href="@Href("~/Posts/CreatePost")">New Post</a>
                <a href="@Href("~/Accounts/Logout")">Logout</a>
            </div>
        }
        else
        {
            <div class="controlpanel">
                <a href="@Href("~/Accounts/Login")">Login Here</a>
            </div>    
        }
    </div>
    <div class="Lastseparator"></div>
</body>
</html>
