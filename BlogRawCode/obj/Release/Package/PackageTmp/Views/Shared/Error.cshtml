@{
    ViewBag.Title = "خطا در عملیات";
}
<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
</head>
<body>
    <div class="messageErr clearfix">
       <i class="fa fa-exclamation-triangle fa-lg"></i> @ViewBag.Message
        <br />
        <div style="float:left; font-family:Verdana;">@ViewBag.extraInfo</div>
        <div style="font-size:0.8em; color:red;">
            <div>@ViewBag.Err1</div>
            <div>@ViewBag.Err2</div>
            <div>@ViewBag.Err3</div>
            <div>@ViewBag.Err4</div>
            <div>@ViewBag.Err5</div>
            <div>@ViewBag.Err6</div>
            <div>@ViewBag.Err7</div>
            <div>@ViewBag.Err8</div>
        </div>
    </div>
</body>
</html>