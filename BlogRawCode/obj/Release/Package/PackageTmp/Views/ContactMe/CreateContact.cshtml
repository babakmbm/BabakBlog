@model Blog.Models.ContactMe

@{
    ViewBag.Title = "تماس با من";
    bool isAdmin = ViewBag.IsAdmin;
}

@section ExtraHeaders
{
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
}

<div id="postEditor">
    <div id="postPrompt">برای تماس با من از فرم زیر استفاده کنید:</div><br />
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <div class="editor-label">
        *@Html.LabelFor(model => model.Name)
        <span class="validationMessage">@Html.ValidationMessageFor(model => model.Name)</span>
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Name, new { @class = "CustomInput-1" })
    </div>

    <br />
    <div class="editor-label">
        @Html.LabelFor(model => model.Subject)
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Subject, new{ @class = "CustomInput-2" })
    </div>

    <br />
    <div class="editor-label">
        *@Html.LabelFor(model => model.Email)
        <span class="validationMessage">@Html.ValidationMessageFor(model => model.Email)</span>
    </div>
    <div class="editor-field">
        @Html.TextBoxFor(model => model.Email, new { @class = "CustomInput-3" })
    </div>

    <br />
    
    <div class="editor-field" hidden="hidden">
        @Html.TextBoxFor(model => model.DateTime)
        @Html.ValidationMessageFor(model => model.DateTime)
    </div>

    <br />
    <div class="editor-label">
        *@Html.LabelFor(model => model.Body)
        <span class="validationMessage">@Html.ValidationMessageFor(model => model.Body)</span>
    </div>
    <div class="editor-field">
        <textarea rows="13" class="CustomTextArea-1" style="margin-right:50px; width:500px;"></textarea>
    </div>
    <br />
    <p id="submitButton">
        <input class="btn btn-default" type="submit" value="ارسال" />
    </p>
}
</div>
<a class="btn btn-primary btn-block" style="width:70%; margin:0 auto;" href="@Url.Content("~/Posts/Index")">بازگشت به صفحه اصلی</a>
