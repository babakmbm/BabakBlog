@model IEnumerable<Blog.Models.EmailBank>

@{
    ViewBag.Title = "لیست ایمیل های خبرنامه";
}

@section Sec1{
    <div style="padding:40px 100px; width:80%; margin:0 auto;">
        <h3 style="color:#fff; padding-right:5px; text-align:right; font-family:DastNevis">
            <i class="fa fa-envelope fa-lg"></i> لیست ایمیل های خبرنامه:
        </h3>
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    #
                </th>
                <th>
                   <span class="glyphicon glyphicon-envelope"></span> ایمیل
                </th>
                <th>
                    <span class="glyphicon glyphicon-cog"></span> عملیات
                </th>
            </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    <a href="#" class="emailLink">@Html.DisplayFor(modelItem => item.Email)</a>
                </td>
                <td>
                    <a href="@Url.Content("~/NewsLetter/DeleteEmail/" + item.ID)"><span class="glyphicon glyphicon-trash"></span> حذف ایمیل </a>
                </td>
            </tr>
        }

        </table>
    </div>
