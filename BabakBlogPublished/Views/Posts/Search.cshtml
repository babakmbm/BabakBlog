@model IEnumerable<Blog.Models.Post>
@using Blog.Models;
@using System.Globalization;
@{
    PersianCalendar pc = new PersianCalendar();
    DateTime thisDate = DateTime.Now;
    persiand pdc = new persiand();
}

@{
    ViewBag.Title = "نتایج جستجو";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}
<br />
<h3 style="color:#fff; text-align:right; font-family:DastNevis">نتایج جستجوی شما برای <span style="color:#D25A3F; padding:0 10px;">@ViewBag.sq</span>:</h3>
<br />
<table class="table table-striped table-hover">
    <tr>
        <th>#</th>
        <th><span class="glyphicon glyphicon-pencil"></span> عنوان پست</th>
        <th><span class="glyphicon glyphicon-time"></span> تاریخ ایجاد</th>
        <th><span class="glyphicon glyphicon-time"></span> تاریخ اصلاح</th>
        <th><span class="glyphicon glyphicon-tags"></span> تگ های مربوط به پست</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem=>item.ID)</td>
        <td>
            @Html.ActionLink(item.Title,"Details", new { id = item.ID })
        </td>
        
        <td>@pc.GetYear(item.DateTime)/@pc.GetMonth(item.DateTime)/@pc.GetDayOfMonth(item.DateTime) - @item.DateTime.ToString("HH:mm:ss")</td>
        
        <td>@pc.GetYear(item.DateModified)/@pc.GetMonth(item.DateModified)/@pc.GetDayOfMonth(item.DateModified) - @item.DateTime.ToString("HH:mm:ss")</td>

        <td>
            @foreach(Tag tag in item.Tags)
                {
                    <a href="@Href("~/Posts/Tags/" + tag.Name)">@tag.Name </a>  
                }
        </td>
    </tr>
}

</table>
