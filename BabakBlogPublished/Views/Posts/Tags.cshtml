@using Blog.Models
@model IEnumerable<Post>


@{
    ViewBag.Title = "Tag : " + ViewBag.tagname;
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<h3 class="message">لیست پست های تگ شده با : <span class="tag"><a href="#">@ViewBag.tagname<img src="@Url.Content("/Content/Images/tag.png")" /></a></span></></h3>

@foreach (Post post in Model)
{
    @PostHelper.Render(post, Html, isAdmin, false)
}

