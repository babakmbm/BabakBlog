<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Blog.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jQuery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Other.js")" type="text/javascript"></script>
    @RenderSection("ExtraHeaders", false)
    
</head>

<body>
    <div id="header">
        <a href="@Href("~/")"><img src="@Href("~/Content/Images/Title.png")" /></a>
    </div>
    <div id="content">
        <div id="topSeparator" class="separator"></div>
        
        <div id="main">
            @RenderBody()
        </div>
        @RenderSection("SideBar",false)
        <div id="bottomSeparator" class="separator"></div>
    </div>
    <div id="footer">
        <div id="copyright">Copyright &copy; 2014 Babak Hosseini Nezhad</div>
        @if (ViewBag.IsAdmin ?? false)
        {
            <div class="controlpanel">
                <a href="@Href("~/Posts/Edit")">New Post</a>
                <a href="@Href("~/Accounts/Logout")">Logout</a>
            </div>
        }
        else
        {
            <div class="controlpanel">
                <a href="@Href("~/Accounts/Login")">Login Here</a>
            </div>    
        }
    </div>
</body>
</html>
