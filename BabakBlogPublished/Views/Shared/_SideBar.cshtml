@using Blog.Models;
@using System.Globalization;
@{    
    //PersianDateTime
    PersianCalendar pc = new PersianCalendar();
    DateTime thisDate = DateTime.Now;
    PMonthString pdc = new PMonthString();
    PWDString pwd = new PWDString();
}

<div id="panels">
    <div class="panel panel-primary" >
        <div class="panel-heading"> <span class="glyphicon glyphicon-user"></span>&nbsp بابک حسینی نژاد </div>
        <br />
        <div class="panel-body" style="text-align:center;">
            <div><img style="margin:0 auto; width:100px;" class="img-responsive" src="@Href("/Content/Images/portrait-f.png")" alt="portrait"/></div>
            <div id="GithubLink"><a href="https://github.com/babakmbm/BabakBlog" target="_blank"><span class="fa fa-git fa-lg"></span> کد روی گیت هاب</a></div>
            <div id="FeedList"><a href="@Href("~/Posts/RSS")" target="_blank"> <span class="fa fa-rss fa-lg"></span> فید آر اس اس</a></div>
            <div id="facebookHeader"><a href="http://facebook.com/babakmbm" target="_blank"><span class="fa fa-facebook fa-lg"></span> روی فیس بوک</a></div>
            <div id="twitterHeader"><a href="http://twitter.com/babakmbm" target="_blank"><span class="fa fa-twitter fa-lg"></span> روی توییتر</a></div>
        </div>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading"> <span class="fa fa-calendar"></span>&nbsp تاریخ امروز </div>
        <div class="panel-body">
            <p>
                @pwd.pwd(pc.GetDayOfWeek(thisDate)) - 
                @pc.GetDayOfMonth(thisDate) 
                @pdc.pdc(pc.GetMonth(thisDate)) 
                @pc.GetYear(thisDate)
            </p> 
        </div>
    </div>
    
    <div class="panel panel-primary">
        <div class="panel-heading"> <span class="fa fa-envelope-o"></span>&nbsp عضویت در خبرنامه </div>
        <div class="panel-body text-center">
            <div class="btn btn-default btn-block" data-toggle="modal" data-target=".newsLetter" style="color:#D25A3F; font-weight:bold; border:1px solid #D25A3F;">عضو شوید</div> 
        </div>
    </div>
</div>